<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAIDL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AIDL测试"
                android:textAllCaps="false"
                android:onClick="aidl"/>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSplash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Canvas-splash动画"
                android:textAllCaps="false"
                android:onClick="splash"/>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnIrregular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Canvas-不规则图形"
                android:textAllCaps="false"
                android:onClick="irregular"/>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnExplosion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Canvas-粒子爆炸效果"
                android:textAllCaps="false"
                android:onClick="explosion"/>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBezier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Canvas-贝塞尔曲线"
                android:textAllCaps="false"
                android:onClick="bezier"/>

    </LinearLayout>

</ScrollView>
